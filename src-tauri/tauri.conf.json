{
  "productName": "Magnolia",
  "version": "1.2.0",
  "identifier": "com.chair.magnolia",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Magnolia",
        "width": 1300,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "decorations": false,
        "shadow": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/nsis/headerimage.bmp",
        "sidebarImage": "icons/nsis/sidebarimage.bmp"
      }
    }
  }
}
